@model Category
@*<form method="post" asp-action="DeletePOST">*@
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />   @*Pass the id to Controller as POST*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <!--<div asp-validation-summary="All"></div>-->       @*Validation Summary*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>  @*Client-side validation*@
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:160px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:160px">
            Back to List
        </a>
    </div>
</form>

@*Client Side Validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
